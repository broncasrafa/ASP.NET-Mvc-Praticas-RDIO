
@model Rdio.Mvc.Core.Domain.Album

@using Rdio.Mvc.Helpers

@{
    ViewBag.Title = "Album - Editar";
}

<div class="page-header">
    <h1 class="title">Album</h1>
    <ol class="breadcrumb">
        <li class="active">This is a quick overview of edit album</li>
    </ol>
</div>

<div class="container-padding">
    @using (Html.BeginForm("Edit", "Albums", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-12 col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-title">
                        Photo Album
                    </div>
                    <div class="panel-body">
                        <div class="col-md-6 col-md-6">
                            @if (Model.PhotoAlbum != null)
                            {
                                <img class="thumbnail img-responsive" src="@Url.Action("ExibirImagemAlbum", "Albums", new { id = Model.Id })" id="album" alt="album">
                            }
                            else
                            {
                                <img class="thumbnail img-responsive" src="http://placehold.it/400x400" alt="">
                            }

                            <input type="file" class="text-center center-block well well-sm" name="imageAlbum" id="image">
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-12 col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <form>
                            <div class="form-group">
                                <label for="input1" class="form-label">Album</label>
                                @Html.TextBoxFor(model => Model.Name, htmlAttributes: new { @class = "form-control", @id = "txtAlbum" })
                            </div>
                            <div class="form-group">
                                <label for="input2" class="form-label">Artista</label>
                                @Html.TextBoxFor(model => Model.Artista.Name, htmlAttributes: new { @class = "form-control", @id = "txtAlbum" })
                            </div>
                            <button type="submit" class="btn btn-default">Save</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row" style="padding-bottom: 10px">
        @Html.ActionImage("Details", "Albums", new { id = Model.Id }, "btn-light", "btn-xs", "fa-mail-reply", "Voltar", null)
    </div>

</div>
