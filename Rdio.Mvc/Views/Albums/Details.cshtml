@model Rdio.Mvc.Core.Domain.Album

@using Rdio.Mvc.Helpers

@{
    ViewBag.Title = "Album - Detalhes";
}

<link href="~/css/glyphicons-extended/css/glyphicons-extended.css" rel="stylesheet" />

<div class="page-header">
    <h1 class="title">Album</h1>
    <ol class="breadcrumb">
        <li class="active">This is a quick overview of details albums</li>
    </ol>
</div>

<div class="row page-header">
    <div class="col-md-2">
        @if (Model.PhotoAlbum != null)
        {
            <img class="img-responsive" src="@Url.Action("ExibirImagemAlbum", "Albums", new { id = Model.Id })" id="album" alt="album" width=100 height="100" >
        }
        else
        {
            <img class="img-responsive" src="http://placehold.it/100x100" alt="">
        }      
    </div>
    <div class="col-md-10" style="margin-left: -95px; margin-top: -7px;">
        <h4 style="color:#646464; font-family:'Segoe UI', Tahoma, sans-serif; font-size: 20pt; margin-top: 3px !important; margin-bottom: 0px !important;">
            @Html.DisplayFor(model => model.Name)
        </h4>
        <p style="color:#999999; font-family:'Segoe UI', Tahoma, sans-serif; font-size: 13pt;">
            @Html.DisplayFor(model => model.Artista.Name)
        </p>
        <p style="color:#999999; font-family:'Segoe UI', Tahoma, sans-serif; font-size: 10pt;">
            @Html.DisplayFor(model => model.GeneroAlbum)
        </p>
    </div>
    <div class="col-lg-4 col-md-6 pull-left" style="margin-top: 25px; margin-left:0px;">        
        @Html.ActionImage("Edit", "Albums", new { id = Model.Id }, "btn-light", "btn-xs", "fa-pencil-square-o", "Editar", htmlAttributes: new { @style = "width: 100px; padding-right: 26px;" })

        @Html.ActionImage("Index", "Albums", null, "btn-light", "btn-xs", "fa-mail-reply", "Voltar", null)

        @*@Html.ActionLink("Voltar", "Index", "Albums", htmlAttributes: new { @class = "btn btn-primary btn-xs" })*@
    </div>
    <div class="col-lg-1 col-md-12 pull-right" style="margin-top: 25px;">
        <span style="color:#999999; font-family:'Segoe UI', Tahoma, sans-serif; font-size: 10pt;">@Html.DisplayFor(model => model.Musics.Count) musicas</span>
    </div>
</div>

<div class="row page-header">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-title">
                Your musics from this album
            </div>
            <div class="panel-body table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <td>#</td>
                            <td></td>                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var music in Model.Musics)
                        {
                            <tr>
                                <td style="line-height: 0px; width: 10px;">@Html.DisplayFor(modelItem => music.TrackNumber)</td>
                                <td style="line-height: 0px;">
                                    @Html.DisplayFor(modelItem => music.Name)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

