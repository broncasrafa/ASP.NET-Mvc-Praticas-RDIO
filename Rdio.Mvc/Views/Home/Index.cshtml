@using Rdio.Mvc.ViewModels
@using Rdio.Mvc.Helpers
@using System.Linq

@model StatusGeralViewModel

@{
    ViewBag.Title = "Home Page";
}

<link href="~/css/shortcuts.css" rel="stylesheet" />

<!-- Start Page Header -->
<div class="page-header">
    <h1 class="title">Dashboard</h1>
    <ol class="breadcrumb">
        <li class="active">This is a quick overview of some musics</li>
    </ol>
</div>
<!-- End Page Header -->

<div class="container-widget">
    <div class="col-md-12">
        <ul class="topstats clearfix">
            @*<li class="arrow"></li>*@
            <li class="col-xs-6 col-lg-2">
                <span class="title"><i class="fa fa-music"></i> Músicas</span>
                <h3>@Html.DisplayFor(model => model.TotalMusicas)</h3>                
            </li>
            <li class="col-xs-6 col-lg-2">
                <span class="title"><i class="fa fa-microphone"></i> Artistas</span>
                <h3>@Html.DisplayFor(model => model.TotalArtistas)</h3>                
            </li>
            <li class="col-xs-6 col-lg-2">
                <span class="title"><i class="fa fa-bullseye"></i> Albums</span>
                <h3 class="color-up">@Html.DisplayFor(model => model.TotalAlbums)</h3>                
            </li>
            <li class="col-xs-6 col-lg-2"> 
                <span class="title"><i class="fa fa-tag"></i> Gêneros Musicais</span>
                <h3>@Html.DisplayFor(model => model.TotalGeneros)</h3>                
            </li>
            <li class="col-xs-6 col-lg-2"> 
                <span class="title"><i class="glyphicon glyphicon-heart red"></i> Favoritas</span>
                <h3 class="color-up">@Html.DisplayFor(model => model.TotalFavoritas)</h3>                
            </li>
            <li class="col-xs-6 col-lg-2">
                <span class="title"><i class="fa fa-star"></i> 5 estrelas</span>
                <h3 class="color-down">@Html.DisplayFor(model => model.TotalCincoEstrelas)</h3>                
            </li>
        </ul>
    </div>

    <div class="row">
        <!-- Start General Stats -->
        <div class="col-md-12 col-lg-9">
            <div class="panel panel-widget" style="height:205px;">
                <div class="panel-title">
                    Status Geral
                </div>
                <div class="panel-body">
                    @Html.DivStatusGeralFor(model => model.RapHipHopPercent, "Rap/Hip - Hop", null)
                    @Html.DivStatusGeralFor(model => model.RockPercent, "Rock")
                    @Html.DivStatusGeralFor(model => model.PopPercent, "Pop")
                    @Html.DivStatusGeralFor(model => model.PagodePercent, "Pagode")
                    @Html.DivStatusGeralFor(model => model.ReligiousPercent, "Religious")
                    @Html.DivStatusGeralFor(model => model.InstrumentalsPercent, "Instrumentals")
                    @Html.DivStatusGeralFor(model => model.SoundTrackMoviesPercent, "Soundtrack")
                </div>
            </div>
        </div>
        <!-- End General Stats -->


        <div class="col-md-6 col-lg-3">
            <div class="widget socialbox" style="background:#007fc5; height:205px;">
                <p class="text">
                    Sem a música, a vida seria um erro
                </p>
                <p class="text-info">22 May, 2015 via mobile</p>
                <div class="logo">
                    <img src = "/img/Rdio_ico.ico" style="width: 60px;" />
                </div>
                <ul class="info">
                    <li><i class="fa fa-thumbs-up"></i>694</li>
                    <li><i class="fa fa-comment"></i>2.192</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 col-lg-7">
            <div class="panel panel-widget">
                <div class="panel-title">
                    5 estrelas @*<input id="input-1" name="input-1" class="rating rating-loading" data-min="0" data-max="5" data-step="1">*@

